<%- include('../includes/head.ejs') %>
</head>

<body>

    <%- include('../includes/navbar.ejs') %>


    <div class="container">
        <div class="row">
            <%- include('../includes/menu.ejs') %>

    <!-- content -->
    <div class="col-md-9">
        <div class="panel panel-primary">
            <div class="panel-heading">
                Student Assessment
                <a href="/assessment/add" class="btn btn-primary btn-sm pull-right">
                    <i class="glyphicon glyphicon-plus"></i>
                    Add student's grades
                </a>
            </div>

            <div class="panel panel-info">
                <table class="table">
                    <% if(assessment.length > 0) { %> 
                        <% for(let assessments of assessment) {%> 
                    <tr>
                        <td class="middle">
                            <div class="media">
                                <div class="media-left">
                                    <a href="#">
                                        <img class="media-object"
                                            src="<%= assessments.student.Image %> "
                                            height="100px" width="100px" alt="...">

                                    </a>
                                </div>
                                <div class="media-body">
                                    <address>
                                        Class : <%= assessments.student.classs %> <br>
                                        Nama Siswa : <%= assessments.student.name %> <br>
                                        Jenis Kelasmin : <%= assessments.student.gender %> <br>
                                        Nik : <%= assessments.student.nik %> 
                                    </address>
                                </div>
                                <div class="media-body">
                                    <address>
                                        Nilai Anda : <%= assessments.score %> 
                                    </address>
                                </div>
                            </div>
                        </td>
                        <td width="100" class="middle">
                            <div>
                                <a href="/assessment-edit/<%= assessments.id %>?edit=true" class="btn btn-circle btn-default btn-xs" title="Edit">
                                    <i class="fas fa-pencil-alt"></i>
                                </a>
                                <form action="/assessment-delete" method="post">
                                    <input type="hidden" name="assessmentId" value="<%= assessments.id %>">
                                    <button type="submit" class="btn btn-circle btn-danger btn-xs"><i class="fas fa-trash"></i></button>
                                </form>
                                
                            </div>
                        </td>
                    </tr>
                        <%}%> 
                    <% }else{ %>
                        <tr>
                            <td>Data Not found</td>
                        </tr> 
                        <% } %> 
                </table>
            </div>




        </div>
    </div>
    <!-- content -->
            <%- include('../includes/footer.ejs') %>